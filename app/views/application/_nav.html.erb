<!-- Navigation -->
<nav class="navbar navbar-light bg-light static-top">
  <div class="container">
    <%= link_to 'Every Cook and Cranny', root_path, class: 'navbar-brand' %>
    <% if current_user.present? %>
      <%= link_to 'My Recipes', recipes_path(user_id: current_user.id), class: 'btn btn-light' %>
    <% end %>
    <%= link_to 'Browse Recipes', recipes_path, class: 'btn btn-light' %>
    <%= link_to 'Add Recipe', new_recipe_path, class: 'btn btn-light' %>
    <% if user_signed_in? %>
      <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-light' %>
    <% else %>
      <%= link_to 'Login', new_user_session_path, class: 'btn btn-light' %>
    <% end %>
    <%= form_tag(recipes_path, method: :get, class: 'form-inline my-2 my-lg-0') do %>
      <%= text_field_tag :image_text, params[:image_text], class: 'form-control mr-sm-2', type: 'search', placeholder: 'Search by image text' %>
      <%= submit_tag 'Search', name: nil, class: 'btn btn-outline-success my-2 my-sm-0' %>
    <% end %>
  </div>
</nav>