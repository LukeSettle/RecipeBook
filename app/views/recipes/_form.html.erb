<%= form_with model: @recipe, class: 'base-form' do |f| %>
  <%= f.text_field :name, placeholder: "Name" %>
  <%= f.text_area :description, placeholder: 'Description' %>
  <%= f.select :tag_ids, @tags, { include_blank: true }, { multiple: true } %>    
  <%= f.file_field :recipe_image %>
  <%= f.submit "Add Recipe" %>
<% end %>