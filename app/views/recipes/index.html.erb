<!-- Page Content -->
<div class="container">

  <!-- Page Heading -->
  <h1 class="my-4">Recipes
    <% if @user.present? %>
      <small><%= @user.full_name %></small>
    <% else %>
      <small>View All</small>
    <% end %>
  </h1>

  <% if @recipes.any? %>
    <% @recipes.each do |recipe| %>
      <!-- Project One -->
      <div class="row">
        <div class="col-md-7">
          <%= render 'shared/recipe_image', recipe: recipe %>
        </div>
        <div class="col-md-5">
          <h3><%= recipe.name %></h3>
          <p><%= recipe.description %></p>
          <%= link_to 'View Recipe', recipe_path(recipe), class: 'btn btn-primary' %>
        </div>
      </div>
      <!-- /.row -->

      <hr>
    <% end %>
  <% elsif @user == current_user %>
    <div class="text-center my-5 py-5">
      <h2>Looks like you don't have any recipes!</h2>
      <p>You can add your own recipes <%= link_to 'HERE', new_recipe_path, class: 'btn btn-primary' %></p>
    </div>
  <% else %>
    <div class="text-center my-5 py-5">
      <h2>Looks like this user hasn't added any recipes yet <%= icon('far', 'frown') %></h2>
    </div>
  <% end %>

  <!-- Pagination -->
  <ul class="pagination justify-content-center">
    <%= paginate @recipes %>
